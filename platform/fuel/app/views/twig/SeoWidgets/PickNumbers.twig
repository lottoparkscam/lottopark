{% extends 'Base.twig' %}
{% block styles %}
    {{ style('SeoWidgets/PickNumbers') }}
{% endblock %}
{% block widget %}
    <div class="container widget-1">
        <div class="logo">
            <img src="{{ whitelabelLogoPath }}" alt="Logo"/>
        </div>
        <div class="widget-content">
            <div class="widget-left">
                <div>
                    <div class="lottery-name">
                        <h2>{{ lotteryName }}</h2>
                    </div>
                    <div class="lottery-logo">
                        <img src="{{ ballImagePath }}" alt="Ball"/>
                    </div>
                    <div>
                        <div class="widget-nearest-jackpot">{{ 'Jackpot' | trans }}:</div>
                        <div class="widget-jackpot">{{ nextJackpotPrize | raw }}</div>
                    </div>
                    <div>
                        <div class="widget-lottery-time">
                            <span class="calendar-icon"></span>
                            {{ nextDrawFormatted }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="widget-right">
                <div class="align-right">
                    <div class="widget-ticket-wrapper">
                        <div class="widget-ticket-entity relative">
                            <div class="widget-ticket-entity-content">
                                <div class="widget-ticket-icon-ok">
                                    <span class="fa fa-check-circle" aria-hidden="true"></span>
                                </div>
                                <span class="widget-ticket-entity-help">{{ description }}</span>
                                <div class="clearfix"></div>
                                <div class="widget-ticket-numbers">
                                    {% for number in range (1, normalNumbersRange) %}
                                        <a class="widget-ticket-number" href="#">{{ number }}</a>
                                    {% endfor %}
                                </div>
                                {% set usesBonusNumbers = bonusNumbersRange > 0 %}
                                {% if usesBonusNumbers %}
                                    <div class="widget-ticket-bnumbers">
                                        {% for bonusNumber in range (1, bonusNumbersRange) %}
                                            <a class="widget-ticket-number" href="#">{{ bonusNumber }}</a>
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div>
                        <a href="{{ quickPickUrl }}" class="widget-play-now disabled" id="seo-widget-play-button">
                            {{ 'Play now' | trans }}
                        </a>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
    <script>
        window.normalNumbersCount = {{ normalNumbersCount }};
        window.bonusNumbersCount = {{ bonusNumbersCount }};
    </script>
    {{ script('SeoWidgets/PickNumbersWidget') }}
{% endblock %}
